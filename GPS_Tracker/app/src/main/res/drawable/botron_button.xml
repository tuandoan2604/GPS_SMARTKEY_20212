<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="#eb8a8a" >
    </solid>
    <gradient
        android:angle="90"
        android:centerColor="#3182d4"
        android:endColor="#3288cf"
        android:startColor="#2474b5"
        android:type="linear" />
    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="0dp"
        android:color="#eb8a8a" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="5dp" >
    </corners>

</shape>